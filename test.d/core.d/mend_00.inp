
* disp (t) 
	(if 
		(is name (t)) (t) 
		(is text (t)) (join "\"" (join (escp (t)) "\""))
		(is numb (t)) (t) 
		(if (t) "(yes)" "(no)")
	)

* test (txt re) 
	(info "(mend " (disp (txt)) " " (disp (re)) ") = " (do (ptrn (re)) (if (mtch (txt)) (mend) "*** error -- doesn't match ***")))


